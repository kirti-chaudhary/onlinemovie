@using  OnlineMovieService.Models;

@{
    ViewData["Title"] = "Invoice";
    var ticketinfo = (ShowInfo)ViewData["ticketinfo"];
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap Simple Login Form</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
   
</head>

<body>
    <div class="container body-content">

        <hr />
        @*<footer>
            <p></p>
        </footer>*@
    </div>
    <div class="form-group">
        <h3 style="text-align:center;color:forestgreen;">Congratulations!!! You have successfully booked your seats..</h3>
        <h3 style="text-align:center;color:dodgerblue">Invoice</h3>
        <div style="text-align:center;color:steelblue; ">
            <table class="table no-border" style="box-shadow:inherit" id="customers">
                <tr><td>  Movie</td><td style="font-size:large"> @ticketinfo.MovieName</td></tr>
                <tr><td> Multiplex</td> <td style="font-size:large">@ticketinfo.MultiplexName</td></tr>
               <tr><td>  Hall</td><td style="font-size:large">@ticketinfo.HallName</td></tr>
                <tr><td> Booking Id</td><td style="font-size:large">@ticketinfo.Seats[0].Bookingid</td></tr>
               
                @foreach (var b in ticketinfo.Seats)
                {
                <tr>
                    <td>SeatNo.</td>
                    <td  style="font-size:large">@b.Seatno</td>
                </tr>
                      <tr>
                         <td>TicketNo.</td><td  style="font-size:large">@b.Ticketno</td>
                          </tr>

                   
                }
            </table>
        </div>
    </div>
</body>
</html>
