        <form asp-action="SelectedSeats" asp-controller="Search">
            <table class="table table-bordered" style="background-color:wheat">


                @for (int i = 1; i <= 10; i++)
                {
                    <tr>

                        @for (int j = 1; j <= seatperrow; j++)
                        {
                            if (j == 4)
                            {
                                <td style="text-align:right" class="no-border">
